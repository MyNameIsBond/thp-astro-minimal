---
export interface Props {
	title: string;
	description: string;
	socials: string[][];
}
const { title, description, socials } = Astro.props;
---

<header>
	<div class="pt-20 border-b dark:border-white dark:border-opacity-20">
		<h1 class="text-black dark:text-white font-medium text-xl">
			{title}
		</h1>
		<p class="dark:text-white py-3 text-sm">
			{description}
		</p>
		<div class="flex flex-row gap-x-2 pb-3">
			{
				socials.map(([name, link]) => (
					<a
						href={link}
						class="dark:text-white text-black text-sm opacity-60"
					>
						{name}
					</a>
				))
			}
		</div>
	</div>
</header>
