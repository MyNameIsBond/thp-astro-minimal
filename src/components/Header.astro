---
export interface Props {
	title: string;
	description: string;
	socials: string[][];
}
const { title, description, socials } = Astro.props;
---

<header>
	<div
		class="pt-20 border-b dark:border-white dark:border-opacity-10 px-10 md:px-0"
	>
		<h1 class="text-neutral-900 dark:text-neutral-50 font-medium text-xl">
			{title}
		</h1>
		<p class="dark:text-neutral-50 py-3 text-sm">
			{description}
		</p>
		<div class="flex flex-row gap-x-2 pt-3 pb-8">
			{
				socials.map(([name, link]) => (
					<a
						href={link}
						class="dark:text-neutral-50 text-neutral-900 text-sm hover:opacity-100 opacity-60"
					>
						{name}
					</a>
				))
			}
		</div>
	</div>
</header>
