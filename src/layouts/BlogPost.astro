---
import Arrow from "../components/Arrow.astro";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		tags?: string[];
		categories?: string[];
	};
}

const {
	content: {
		title,
		tags,
		categories,
		description,
		pubDate,
		updatedDate,
		heroImage,
	},
} = Astro.props as Props;
---

<html>
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<main>
			<article
				class="border-b dark:border-white dark:border-opacity-20 px-10 md:px-0 my-10 md:my-20"
			>
				<Arrow />
				<div class="flex flex-row gap-x-3 py-4">
					{
						tags.map((tag) => (
							<p class="dark:text-neutral-50 opacity-60">{tag}</p>
						))
					}
				</div>
				<h1
					class="dark:text-neutral-50 pb-3 text-neutral-900 font-medium text-xl"
				>
					{title}
				</h1>

				<p class="dark:text-neutral-50 opacity-80 text-neutral-900">
					{description}
				</p>

				<p
					class="dark:text-neutral-50 text-neutral-900 font-medium pt-7 pb-5"
				>
					Tony
				</p>
			</article>
			<div
				class="prose dark:prose-invert prose-img:max-h-96 prose-img:mx-auto contianer px-10 md:px-0"
			>
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
